<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/officeTxt"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginLeft="8dip" />

        <TextView
            android:id="@+id/availabilityTxt"
            android:layout_width="137dp"
            android:layout_height="27dp"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:text="@string/custom_spinner_availability"
            android:textColor="#4fbd0e" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/waitingTxt"
            android:layout_width="245dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:text="@string/custom_spinner_waiting" />

        <TextView
            android:id="@+id/waitingDelayTxt"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dip"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dip">

        <TextView
            android:id="@+id/rankTxt"
            android:layout_width="229dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dip"
            android:text="@string/custom_spinner_rank" />

        <TextView
            android:id="@+id/rankNumberTxt"
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>